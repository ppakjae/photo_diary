<?xml version="1.0" encoding="utf-8"?>
<!--19.12.12 진희 작성-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/size_store_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/authBlack"
        android:orientation="vertical">

        <!--불러온 이미지 ImageView-->
        <ImageView
            android:id="@+id/sizeView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#ffffff"></ImageView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/size_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/authBlack"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/size_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/authBlack"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/size_cancle_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@color/authBlack"
                android:layout_marginRight="120dp"
                android:src="@drawable/cancel_2">
            </ImageButton>
            <TextView
                android:id="@+id/size_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="SIZE">
            </TextView>
            <ImageButton
                android:id="@+id/size_save_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@color/authBlack"
                android:layout_marginLeft="120dp"
                android:src="@drawable/save">
            </ImageButton>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/size_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/authBlack"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/size_916_btn"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:background="@color/authBlack"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/size9_16_g">
            </ImageButton>
            <ImageButton
                android:id="@+id/size_34_btn"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:background="@color/authBlack"
                android:layout_margin="15dp"
                android:src="@drawable/size3_4_g">
            </ImageButton>
            <ImageButton
                android:id="@+id/size_11_btn"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:background="@color/authBlack"
                android:layout_margin="15dp"
                android:src="@drawable/size1_1_g">
            </ImageButton>
            <ImageButton
                android:id="@+id/size_crop_btn"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:background="@color/authBlack"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="120dp"
                android:src="@drawable/crop_g">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
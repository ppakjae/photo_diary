<?xml version="1.0" encoding="utf-8"?>
<!--19.12.12 진희 작성-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/color_set"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/authBlack"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/colorView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#ffffff">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/color_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/authBlack"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/color_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/authBlack"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/color_back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@color/authBlack"
                android:layout_marginRight="120dp"
                android:src="@drawable/back">
            </ImageButton>
            <TextView
                android:id="@+id/color_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="COLOR">
            </TextView>
            <ImageButton
                android:id="@+id/color_save_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@color/authBlack"
                android:layout_marginLeft="120dp"
                android:src="@drawable/save">
            </ImageButton>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/color_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/authBlack"
            android:orientation="horizontal">
            <!--버튼 누르면 line 3dp-->
            <ImageButton
                android:id="@+id/color_plus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="9dp"
                android:background="@drawable/color_plus">
            </ImageButton>
            <ImageButton
                android:id="@+id/color_black"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="9dp"
                android:background="@drawable/color_black">
            </ImageButton>
            <ImageButton
                android:id="@+id/color_white"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="9dp"
                android:background="@drawable/color_white">
            </ImageButton>
            <ImageButton
                android:id="@+id/color_red"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="9dp"
                android:background="@drawable/color_red">
            </ImageButton>
            <ImageButton
                android:id="@+id/color_orange"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="9dp"
                android:background="@drawable/color_orange">
            </ImageButton>
            <ImageButton
                android:id="@+id/color_yellow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:background="@drawable/color_yellow">
            </ImageButton>
            <ImageButton
                android:id="@+id/color_green"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="9dp"
                android:background="@drawable/color_green">
            </ImageButton>
            <ImageButton
                android:id="@+id/color_skyblue"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="9dp"
                android:background="@drawable/color_skyblue">
            </ImageButton>
            <ImageButton
                android:id="@+id/color_blue"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="9dp"
                android:background="@drawable/color_blue">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>